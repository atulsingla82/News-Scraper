<div class="row">
  <div class="col s2"></div>
   <form action="/savedArticles/{{this._id}}" method="POST" class="card-panel col s8">
    <h5>Add a Note:</h5>
      <div class="row">
        
        <div class="input-field">
          <i class="material-icons prefix"></i>
          <input id="icon_telephone" type="text" placeholder="Note" name="note" class="validate active">
        </div>
      </div>
       <!-- Submit Button -->
      <div class="row">
        <div class="input-field">
        <center><input class="btn add-comment-button blue lighten-1" type="submit" value="Submit"></center>
        </div>
      </div>
    </form>
</div>

{{!-- notes go here --}}
<div class="row">
  <div class="col s2"></div>
    <div class="col s8">
      <h5>Notes:</h5>
        {{#if this.note}}
          {{#each this.note}}
            <div class="card">
              <p id="nameComment">{{name}}</p>
              <p>{{body}}<p>
            </div>
          {{/each}}
          {{else}}
          <p>No Notes Yet.</p>
        {{/if}}
    </div>
</div>



 
    

   

